<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title ? current_page.data.title + " | Randolph Ramble" : "Randolph Ramble" %></title>

    <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', '//fonts.googleapis.com/css?family=PT+Sans:400,400italic,700,700italic|Source+Sans+Pro:400,600|Open+Sans:400', :site %>
    <%= javascript_include_tag "//code.jquery.com/jquery-2.2.4.js", "//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", "all" %>
    <%= favicon_tag 'favicon.ico', rel: 'icon', type: 'image/ico' %>
  </head>

  <body class="<%= page_classes %>">

    <div class="container">

      <%= partial 'layouts/mobile-nav' %>

      <%= partial 'layouts/header' %>

      <main class="site-main" role="main">
        <%= yield %>
      </main>

      <%= partial 'layouts/footer' %>

    </div>

  </body>

</html>
